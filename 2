args:
- |
  echo "üü° –ù–∞—á–∞–ª–æ –ø—Ä–æ–≤–µ—Ä–∫–∏..."
  
  # –ü—Ä–æ–≤–µ—Ä–∫–∞ –º–æ–Ω—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
  echo "1. –ü—Ä–æ–≤–µ—Ä—è–µ–º mount point /data:"
  ls -la /data/
  
  # –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–∞–π–ª–∞
  echo "2. –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ñ–∞–π–ª:"
  if [ ! -f "/data/ids.txt" ]; then
    echo "‚ùå –§–ê–ô–õ –ù–ï –ù–ê–ô–î–ï–ù!"
    echo "–°–æ–¥–µ—Ä–∂–∏–º–æ–µ /data:"
    ls -la /data/
    exit 1
  fi
  
  echo "‚úÖ –§–∞–π–ª –Ω–∞–π–¥–µ–Ω"
  echo "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Ñ–∞–π–ª–µ:"
  ls -la /data/ids.txt
  
  # –ß—Ç–µ–Ω–∏–µ —Ñ–∞–π–ª–∞
  echo "3. –ß–∏—Ç–∞–µ–º —Ñ–∞–π–ª –ø–æ—Å—Ç—Ä–æ—á–Ω–æ:"
  line_number=0
  while IFS= read -r line; do
    line_number=$((line_number + 1))
    echo "–°—Ç—Ä–æ–∫–∞ $line_number: '$line'"
    
    # –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º—Å—è –ø–æ—Å–ª–µ 10 —Å—Ç—Ä–æ–∫ —á—Ç–æ–±—ã –Ω–µ –∑–∞—Å–æ—Ä—è—Ç—å –ª–æ–≥–∏
    if [ $line_number -ge 10 ]; then
      echo "... –∏ –µ—â–µ $(($(wc -l < /data/ids.txt) - 10)) —Å—Ç—Ä–æ–∫"
      break
    fi
  done < /data/ids.txt
  
  echo "4. –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞"
  echo "–í—Å–µ–≥–æ —Å—Ç—Ä–æ–∫ –≤ —Ñ–∞–π–ª–µ: $(wc -l < /data/ids.txt)"
